{% extends 'base.html.twig' %}

{% block title %}NewsPhotos index{% endblock %}

{% block body %}
    <h1>NewsPhotos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PhotoNewPhoto</th>
                <th>AltNewsPhoto</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news_photo in news_photos %}
            <tr>
                <td>{{ news_photo.id }}</td>
                <td>{{ news_photo.photoNewPhoto }}</td>
                <td>{{ news_photo.altNewsPhoto }}</td>
                <td>
                    <a href="{{ path('news_photos_show', {'id': news_photo.id}) }}">show</a>
                    <a href="{{ path('news_photos_edit', {'id': news_photo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('news_photos_new') }}">Create new</a>
{% endblock %}
