			<i class="fas fa-external-link-alt"></i>
			Aller Voir ...
		</a>
		<p>{{ xDoc.titlelinkactionsmaster }}</p>
		<hr>
	</div>
{% else %}
	<p>Aucun site</p>
{% endfor %}

