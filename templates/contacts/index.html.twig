{% extends 'base.html.twig' %}

{% block title %}Contacts index{% endblock %}

{% block body %}
    <h1>Contacts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>SubjetContact</th>
                <th>ContentContact</th>
                <th>DateContact</th>
                <th>NameContact</th>
                <th>EmailContact</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.subjetContact }}</td>
                <td>{{ contact.contentContact }}</td>
                <td>{{ contact.dateContact ? contact.dateContact|date('d/m/y H:i:s') : '' }}</td>
                <td>{{ contact.nameContact }}</td>
                <td>{{ contact.emailContact }}</td>
                <td>
                    <a href="{{ path('contacts_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('contacts_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contacts_new') }}">Create new</a>
{% endblock %}
