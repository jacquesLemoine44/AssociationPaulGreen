{% extends 'admin.html.twig' %}

{% block title %}Documents Associés aux actions{% endblock %}

{% block body %}
    <h1>Documents Associés aux actions</h1>

    <div>
        <a class="btn btn-grad btn-info2" href="{{ path('app_doc_actions_assos_new') }}">Nouveau</a>
    </div>        
    <hr class="mb-3">          

    <table class="table">
        <thead>
            <tr>
                <th>Action Origine</th>
                <th>Titre</th>
                <th>Lien vers le Document</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for doc_actions_asso in doc_actions_assos %}
            <tr>
                <td>{{ doc_actions_asso.docactasso.titleactionsasso }}</td> 
                <td>{{ doc_actions_asso.titledocactionsasso }}</td>
                <td>
                    {{ doc_actions_asso.linkdocactionsasso }}
                    <br>
                    <a class="btn btn-info mb-3 mr-1 me-1 btn-sm" href="{{ doc_actions_asso.linkdocactionsasso }}" role="button" data-bs-slide="prev">
                        <i class="fas fa-external-link-alt"></i>
                        Aller Voir ...
                    </a>
                </td>
                <td>
                    <a class="btn btn-grad btn-primary2 me-1 mb-1" href="{{ path('app_doc_actions_assos_show', {'id': doc_actions_asso.id}) }}">Afficher</a>
                    <a class="btn btn-grad btn-warning2" href="{{ path('app_doc_actions_assos_edit', {'id': doc_actions_asso.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
