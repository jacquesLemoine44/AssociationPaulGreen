{% extends 'admin.html.twig' %}

{% block title %}Sortie Universitaire{% endblock %}

{% block body %}
    <h1>Sortie Universitaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Date</th>
                <td>{{ fieldtrip.datefieldtrip ? fieldtrip.datefieldtrip|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ fieldtrip.titlefieldtrip }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ fieldtrip.picturefieldtrip }}</td>
            </tr>
            <tr>
                <th>Texte de pr√©sentation</th>
                <td>{{ fieldtrip.shorttextfieldtrip }}</td>
                {# <td>{{ fieldtrip.textfieldtrip | raw }}</td> #}
            </tr>


            <tr>
                <th>Photos</th>
                <td>   
                    {% if app.request.attributes.get('_route') == 'app_fieldtrips_show' %}
                        <div class="d-flex flex-row">
                            {% for photo in fieldtrip.connectfieldtrip %}
                                <div class="card me-2" style="width: 150px;">
                                    <img src="{{ asset('/photosFieldtrips/'~photo.filefieldtripphoto) }}"
                                        class="border border-2 rounded-3"
                                        alt="{{ photo.altfieldtripphoto }}" width="150" height="150">  
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}        
                </td> 
            </tr>

        </tbody>
    </table>

    <hr class="mb-3">
    <div class="d-flex flex-row my-2">
    
        <a class="btn btn-grad btn-secondary2 me-2" href="{{ path('app_fieldtrips_index') }}">Retour</a>
        <a class="btn btn-grad btn-warning2 me-2" href="{{ path('app_fieldtrips_edit', {'id': fieldtrip.id}) }}">Modifier</a>
        {{ include('fieldtrips/_delete_form.html.twig') }}

{% endblock %}
