{% extends 'admin.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <h1>News</h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ news.id }}</td>
            </tr> #}
            <tr>
                <th>Date</th>
                <td>{{ news.dateNew ? news.dateNew|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ news.titleNew }}</td>
            </tr>
            <tr>
                <th>Photo Principal</th>
                <td>{{ news.pictureNew }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ news.textNew }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('news_index') }}">Retour</a>

    <a href="{{ path('news_edit', {'id': news.id}) }}">Modifier</a>

    {{ include('news/_delete_form.html.twig') }}
    
{% endblock %}
