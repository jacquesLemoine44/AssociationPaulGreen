{% extends 'admin.html.twig' %}

{% block title %}Notre Partenaire{% endblock %}

{% block body %}
    <h1>Notre Partenaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Partenaires</th>
                <td>{{ partner.namePartner }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ partner.textPartner }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                    {# {{ partner.photoPartner }} #}
                     <br>
                    {% if (partner.photoPartner) %}
                        <img src="{{ asset('photosPartners/' ~ partner.photoPartner) }}" width="100">
                    {% endif %} 
                </td>  
            </tr>
            <tr>
                <th>Logo</th>
                <td>
                    {# {{ partner.logoPartner }} #}
                    <br>
                    {% if (partner.logoPartner) %}
                        <img src="{{ asset('photosPartners/' ~ partner.logoPartner) }}" width="100">
                    {% endif %}                         
                </td>
            </tr>
            <tr>
                <th>Lien</th>
                <td>
                    {# {{ partner.linkPartner }} #}
                    {% if ( partner.linkPartner ) %} 
                        <a href="{{ partner.linkPartner }}"><i class="fas fa-link"></i></a>                       
                    {% else %}
                        <i class="fas fa-unlink"></i>
                    {% endif %} 


                </td>
            </tr>
        </tbody>
    </table>

    <hr class="mb-3">
    <div class="d-flex flex-row my-2">

        <a class="btn btn-secondary me-2" href="{{ path('partners_index') }}">Retour</a>

        <a class="btn btn-warning me-2" href="{{ path('partners_edit', {'id': partner.id}) }}">Modifier</a>

        {{ include('partners/_delete_form.html.twig') }}
        
{% endblock %}
