{% block body %}

    <section>
	    <div class="container">
		    <div class="row">
   				<div class="col-md-12"> 
                    <h1 class="text-center">{{ actions_asso.titleactionsasso }}</h1>
				</div>
            </div>
            <div class="row">
				<div class="col-md-12 card">
					<img src="{{ asset('photosActionsAssos/' ~ actions_asso.pictureactionsasso) }}" 
						class="W-100" height="350px" 	
						alt="{{ actions_asso.altPictureActionsAssos }}"
						title="{{ actions_asso.pictureactionsasso }}">
				</div>
            </div>
            <div class="row">
                <div class="col-md-12"> 
                    {{ actions_asso.textactionsasso|raw }}
				</div>
			</div>
		</div>
    </section>



