                {{ actions_asso.linkactionsasso }}

                {{ actions_asso.startactionsasso ? actions_asso.startactionsasso|date('Y-m-d H:i:s') : '' }}

              {{ actions_asso.endactionsasso ? actions_asso.endactionsasso|date('Y-m-d H:i:s') : '' }}
   

    <hr class="mb-3">
    <div class="container">
		<div class="row">
   			<div class="col-md-12">


			<div id="carouselExampleCaptions2" class="carousel slide carousel-fade" data-bs-ride="carousel2">
				<div class="carousel-indicators">

					{%  set isFirst = 0 %}
					{% for xTab in actions_asso.actionsassosphoto %}
						<button type="button" data-bs-target="#carouselExampleCaptions" 
                            data-bs-slide-to="{{ isFirst }}" 
                            aria-label="Slide {{ isFirst+1 }}" 
                            class={% if (isFirst==0) %} "active" {% else %} "" {% endif %} 
                            aria-current={% if (isFirst==0) %} "true" {% else %} "false" {% endif %}>
                        </button>
						{% set isFirst = isFirst+1 %}
					{% endfor %}
				</div>

				<div class="carousel-inner">

					{%  set isFirst = true %}
					{% for xTab in actions_asso.actionsassosphoto %}
						<div class="carousel-item {% if isFirst == true %}active{% endif %}">
							<div class="d-flex flex-row justify-content-center">
								<img src="{{ asset('photosActionsAssos/' ~ xTab.photoactionsasso) }}" 
                                    class="d-block imgClass" w-100 width="800" 
                                    height="400" 
                                    alt="...">
							</div>
							{% set isFirst = false %}
							{# <div class="carousel-caption d-none d-md-block">
								<h5>{{ xTab.titleactionsasso}}</h5>
								<p>{{ xTab.altPictureActionsAssos}}</p>
							</div> #}
						</div>
					{% endfor %}
               {# <pre>
               		{% for xTab in actions_asso.actionsassosphoto %}
                   {{ dump(xTab.photoactionsasso) }}
					{% endfor %}
               </pre> #}

				</div>

				<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>

			</div>

            </div>
        </div>   
    </div>
