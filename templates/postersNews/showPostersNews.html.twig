{% extends 'base.html.twig' %}

{% block title %}
	la News
{% endblock %}

{% block body %}

	<section>
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h1 class="h-grad bg-secondary2">{{ news.titleNew }}</h1>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12 clCard">
					<img src="{{ asset('photosNews/' ~ news.pictureNew) }}" 
						class="W-100" height="350px" 
						alt="{{ news.altpicturenew }}" title="{{ news.pictureNew }}">
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					{{ news.textNew|raw }}
				</div>
			</div>
		</div>
	</section>

	<hr class="mb-3">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h5>Le
					{{ news.dateNew ? news.dateNew|date('d/m/y') : '' }}</h5>
			</div>
		</div>
	</div>

	<hr class="mb-3">
	<div class="container bg-dark py-3">
		<div class="row">
			<div class="col-md-12">

				<div id="carouselExampleCaptions2" class="carousel slide carousel-fade" data-bs-ride="carousel2">

					<div class="carousel-indicators">
						{%  set isFirst = 0 %}
						{% for xTab in news.newsPhotosNews %}
							<button type="button" 
								data-bs-target="#carouselExampleCaptions" 
								data-bs-slide-to="{{ isFirst }}" 
								aria-label="Slide {{ isFirst+1 }}" 
								class={% if (isFirst==0) %} "active" {% else %} "" {% endif %} 
								aria-current={% if (isFirst==0) %} "true" {% else %} "false" {% endif %}>
							</button>
							{% set isFirst = isFirst+1 %}
						{% endfor %}
					</div>

					<div
						class="carousel-inner">

						<!--/.Controls-->
						{%  set isFirst = true %}
						{% for xTab in news.newsPhotosNews %}
							<div class="carousel-item {% if isFirst == true %}active{% endif %}">
								<div class="d-flex flex-row justify-content-center">
									<img src="{{ asset('photosNews/' ~ xTab.photoNewPhoto) }}" 
										class="d-block imgClass" w-100 height="400" 
										alt="{{ xTab.altphotoNewPhoto }}">
								</div>
								{% set isFirst = false %}
							</div>
						{% endfor %}

					</div>

					<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>

				</div>

			</div>
		</div>
	</div>

	{# 
	<div class="col-6 text-center">
	<a class="btn btn-primary mb-3 mr-1" href="#myCarouselPartners" role="button" data-bs-slide="prev"><i class="fas fa-arrow-left"></i></a>
	<a class="btn btn-primary mb-3 " href="#myCarouselPartners" role="button" data-bs-slide="next"><i class="fas fa-arrow-right"></i></a>
	</div>
	 #}

	<hr class="mb-3">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<a class="btn btn-grad btn-secondary2" href="{{ path('posters_news_index') }}">Retour</a>
			</div>
		</div>
	</div>

{% endblock %}
