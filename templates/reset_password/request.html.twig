{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
            
                <h1>Réinitialisez votre mot de passe</h1>

                {{ form_start(requestForm) }}

                <p class="fst-italic fw-light text-muted">
                    <i class="fas fa-info-circle iconfont" title=" Note "></i>
                    Veuillez entrer vos informations de compte pour r&eacute;cup&eacute;rer votre mot de passe 
                </p>

                {{ form_row(requestForm.email) }}

                <div>
                    <small>
                        Entrez votre adresse e-mail et nous vous enverrons un
                        lien pour réinitialiser votre mot de passe.
                    </small>
                </div>

                <button class="btn btn-grad btn-primary2">
                    Envoyer un e-mail de réinitialisation du mot de passe
                </button>
                {{ form_end(requestForm) }}

            </div>
        </div>
    </div>

{% endblock %}
