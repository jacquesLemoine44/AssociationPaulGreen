{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

{# === #}

<section class="" id="Login">

<div class="container">
    <div class="row">
        <div class="col-md-6">

            <form class="row g-3" method="post">

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté comme {{ app.user.username }},
                        <a href="{{ path('app_logout') }}"> se déconnecter </a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Conectez vous svp ...</h1>
  

                <fieldset class="clfieldset">

                    <legend>Se Connecter...</legend>

                    <div class="form-floating mb-3">
                        <input type="email" value="{{ last_username }}" name="email" id="floatingInput" class="form-control" autocomplete="email" required autofocus placeholder="nom.prenom@exemple.com" autocomplete="email" required autofocus>
                        <label for="floatingInput">Adresse Mail</label>
                    </div>

                    <div class="form-floating">
                        <input type="password" name="password" id="floatingPassword" class="form-control" autocomplete="current-password" placeholder="Mot de Passe">
                        <label for="floatingPassword">Mot de Passe</label>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="col-12 mt-3 d-flex justify-content-evenly">
                        <button class="btn btn-primary" type="submit">
                            Se Connecter
                        </button>
                        <button class="btn btn-light" formaction="{{ path('home') }}" type="">
                            Fermer
                        </button>
                    </div>

                </fieldset>

                </form>

            </div>
        </div>
    </div>

</section>
