<div class="container">
	<div class="row">
		<div class="col-md-8">

			{{ form_start(form) }}

			<table class="table">
				<tbody>
					<tr>
						<th>Nom :</th>
						<td>
							{{ form_widget(form.nameUser) }}
						</td>
					</tr>
					<tr>
						<th>Prénom :</th>
						<td>{{ form_widget(form.firstNameUser) }}</td>
					</tr>
						
					<tr>
	                    <th>Role :</th>
                    	<td>{{ form_widget(form.roles) }} </td>
					</tr>

					<tr>
						<th>Photo :</th>
						<td>
							{{ form_widget(form.photoUser) }}
							<hr>
								{% if user.photoUser %}
                                <img  class="border-end border-bottom border-5 rounded-circle" 
                                    src="{{ asset('photosAdherents/' ~ user.photoUser) }}"
                                    alt="{{ user.nameUser }} {{ user.firstNameUser }}">                    
                            {% else %}   
                                <img  class="border-end border-bottom border-5 rounded-circle" 
                                    src="{{ asset('icones/PasDeTete.png') }}"
                                    alt="{{ user.nameUser }} {{ user.firstNameUser }}">  
                            {% endif %}								
							{# <img src="{{ asset('photosAdherents/' ~ user.photoUser) }}" width="100" alt="{{ user.nameUser }} {{ user.firstNameUser }}"> #}
						</td>
					</tr>

					<tr>
						<th>Adresse 1:</th>
						<td>{{ form_widget(form.address1User) }}</td>
					</tr>
					<tr>
						<th>Adresse 2 :</th>
						<td>{{ form_widget(form.address2User) }}</td>
					</tr>
					<tr>
						<th>Code Postal :</th>
						<td>{{ form_widget(form.cpUser) }}</td>
					</tr>
					<tr>
						<th>Ville :</th>
						<td>{{ form_widget(form.townUser) }}</td>
					</tr>
					<tr>
					<th>Téléphone <i>(commence par 0,sans espace)</i>:</th>
						<td>{{ form_widget(form.phoneUser) }}</td>
					</tr>
					<tr>
						<th>Mail :</th>
						<td>{{ form_widget(form.email) }}</td>
					</tr>
					<tr>
						<th>Etudiant en :</th>
						<td>{{ form_widget(form.studyUser) }}</td>
					</tr>
					<tr>
						<th>Année inscription :</th>
						<td>{{ form_widget(form.yearMenbershipUser) }}</td>
					</tr>


				    {% if app.user.roles[0]=="ROLE_ADMIN" %} 
						<tr>
							<th>Fonction(s) :</th>
							<td>{{ form_widget(form.functionUser) }}</td>	
						</tr>
					{% endif %}
	
				{# {% if app.user.roles[0]=="ROLE_ADMIN" %} #}
					{# <tr class=(app.user.roles[0]=="ROLE_ADMIN") ? '' : 'd-none'>
					{% if app.user.roles[0]=="ROLE_ADMIN" %}
						<th>Fonction(s) :</th>
					{% endif %}
                        <td>{{ form_widget(form.functionUser, {"attr": {"class": (app.user.roles[0]=="ROLE_ADMIN") ? '' : 'd-none'}}) }}</td> #}
                        {# <td>{{ form_widget(form.functionUser, {"attr": {"class": "d-none"}}) }}</td>					 #}
						{# <td>{{ form_widget(form.functionUser) }}</td> #}
					{# </tr> #}
				{# {% endif %} #}

					{% if app.user.roles[0]=="ROLE_ADMIN" %} 
						<tr>
							<th>Newsletter :</th>
	                        <td>
    		                    {{ form_widget(form.newslettersNewsUser) }}
                        		{{ form_widget(form.newsletterIntershipUser) }}
                        		{{ form_widget(form.newsletterAssosUser) }}
                       	 		{{ form_widget(form.contactinfoUser) }}
{# 						
						{% if app.user.roles[0]=="ROLE_ADMIN" %}
						{{ form_label(form.newslettersNewsUser) }}
                        {{ form_label(form.newsletterIntershipUser, {"attr": {"class": (app.user.roles[0]=="ROLE_ADMIN") ? '' : 'd-none'}}) }}
                        {{ form_label(form.newsletterAssosUser, {"attr": {"class": (app.user.roles[0]=="ROLE_ADMIN") ? '' : 'd-none'}}) }}
                        {{ form_label(form.contactinfoUser, {"attr": {"class": (app.user.roles[0]=="ROLE_ADMIN") ? '' : 'd-none'}}) }} #}
						</td>						
					{% endif %}
						

					</tr>
				</tbody>
			</table>

			<hr class="mb-3">
    		<div class="d-flex flex-row my-2">
			 	<button class="btn btn-grad btn-success2 me-2">{{ button_label|default('Sauver') }}</button>
				{{ form_end(form) }}
        </div>
	</div>
</div>
