{% extends 'admin.html.twig' %}

{% block title %}Adhérent{% endblock %}

{% block body %}
    <h1>Adhérent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom de l'Adhérent</th>
                <td>{{ user.nameUser }}
                </td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstNameUser }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.address1User }}</td>
            </tr>
            <tr>
                <th>Complément d'Adresse</th>
                <td>{{ user.address2User }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{{ user.cpUser }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.townUser }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ user.phoneUser }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ user.photoUser }}</td>
            </tr>
            <tr>
                <th>Etudiant</th>
                <td>{{ user.studyUser }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ user.yearMenbershipUser }}</td>
            </tr>
            <tr>
                <th>NewslettersNewsUser</th>
                <td>{{ user.newslettersNewsUser ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>NewsletterIntershipUser</th>
                <td>{{ user.newsletterIntershipUser ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>NewsletterAssosUser</th>
                <td>{{ user.newsletterAssosUser ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ContactinfoUser</th>
                <td>{{ user.contactinfoUser ? 'Yes' : 'No' }}</td>
            </tr>

        </tbody>
    </table>

    <hr class="mb-3">
    <div class="d-flex flex-row my-2">

        <a class="btn btn-secondary me-2" href="{{ path('users_index') }}">Retour</a>

        <a class="btn btn-warning me-2" href="{{ path('users_edit', {'id': user.id}) }}">Modifier</a>

        {{ include('users/_delete_form.html.twig') }}
    
{% endblock %}
